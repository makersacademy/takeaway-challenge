require 'menu'

describe Menu do

  subject(:menu) { described_class.new(dishes) }

  let(:dishes) do
    {
      eggs: 1.50,
      milk: 4.50
    }
  end

  it 'contains a list of price of dishes' do
    expect(menu.dishes).to eq(dishes)
  end

  it 'prints dish list with prices' do
    printed_menu = "eggs $1.50, milk $4.50"
    expect(menu.print).to eq(printed_menu)
  end


  it 'knows if the dish is on the menu' do
    expect(menu.has_dish?(:milk)).to be true
  end

  it 'knows if the dish is not on the menu' do
    expect(menu.has_dish?(:nachos)).to be false
  end

end
